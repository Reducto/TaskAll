<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">


<div class="col-md-6">
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Статьи
    <span class="badge"><%= @posts.count%></span>
    </h3>
  </div>
  <div class="panel-body">
    <ul class="nav">
         <% @posts.each do |post|%>
        <div class="form-group">
            <li><%= post.id%>.
                <a href="posts/<%= post.id%>/show" data-toggle="tooltip" data-placement="right" title="<%=post.author.name%>">
                    <%= post.title%>
                 </a>
                 <div class="pull-right">
                    <% post.tags.each do |tag|%>
                    <a href="/tags/<%=tag.id %>/search"><span class="label label-default"><%= tag.name%></span></a>
                    <%end%>
                </div>
            </li>
        </div>
        <%end%>
    </ul>
  </div>
    <div class="text-center"><%= will_paginate @posts %></div>
</div>
</div>